{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es2015"
        ],
        "outDir": "out",
        "rootDir": "src",
        "sourceMap": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "alwaysStrict": true,
        "strictNullChecks": false, // TODO change to true (86)
        "noImplicitAny": false, // TODO change to true when dependency `source-map-resolve` will be removed
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitThis": true,
        "noImplicitReturns": false, // TODO change to true (32)
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        ".vscode-test",
        "node_modules",
        "SampleApplication/",
        "SampleApplication/node_modules",
        "SampleApplication/.vscode",
        "ReactTypings",
        "tools/",
        "src/test/resources/sampleReactNative022Project/"
    ]
}
