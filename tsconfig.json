{
    "compilerOptions": {
        // We need to set ES6 target otherwise instantiating ChromeDebugSession
        // throws "Class constructor ChromeDebugSession cannot be invoked without 'new'" at runtime
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": false,
        "noEmitOnError": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "rootDir": "./",
        "outDir": "out",
        "lib": [
            "es6"
        ],
        "typeRoots": [
            "typings/global",
            "typings/modules"
        ]
    },
    "exclude": [
        ".vscode-test",
        "node_modules",
        "SampleApplication/",
        "SampleApplication/node_modules",
        "SampleApplication/.vscode",
        "ReactTypings",
        "tools/",
        "test/resources/sampleReactNative022Project/",
        ".vscode-test"
    ]
}
